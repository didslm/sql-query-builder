{
  "name": "didslm/sql-builder",
  "description": "A flexible PHP package to build SQL queries using the builder pattern.",
  "type": "library",
  "require": {
    "php": "^7.4 || ^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^0.12",
    "friendsofphp/php-cs-fixer": "^2.19"
  },
  "autoload": {
    "psr-4": {
      "Didslm\\QueryBuilder\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Didslm\\QueryBuilder\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "static-analysis": "phpstan analyse src",
    "fix": "php-cs-fixer fix"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "license": "MIT",
  "authors": [
    {
      "name": "Your Name",
      "email": "your.email@example.com"
    }
  ],
  "support": {
    "issues": "https://github.com/didslm/sql-builder/issues",
    "source": "https://github.com/didslm/sql-builder"
  }
}
